	"exports": "./lib/index.js",
	"author": "luctst",
	"license": "MIT",
	"files": [
		"lib/**/*"
	],
	"repository": {
		"type": "git",
		"url": "https://www.github.com/luctst/argv-user-input"
	},
	"bugs": {
		"url": "https://www.github.com/luctst/argv-user-input/issues"
	},
	"homepage": "https://www.github.com/luctst/argv-user-input",
	"engines": {
